<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background"
    tools:context="com.wondrousapps.flagquiz.activity.FlagQuizActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/top_layout"
        android:layout_alignParentTop="true"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#fff"
            android:layout_marginLeft="8dp"
            android:textSize="18dp"
            android:layout_weight="1"
            android:id="@+id/total_que"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/test_timer"
            android:textColor="#fff"
            android:layout_marginRight="8dp"

            android:layout_weight="1"
            android:gravity="right"
            android:textSize="18dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:src="@drawable/abkhazia"
        android:background="#6effffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/top_layout"
        android:layout_marginTop="5dp"
        android:id="@+id/flag_holder"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/option_list"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/flag_holder"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#000"

            android:id="@+id/option_a"
            android:background="#FFF"
            android:textSize="18dp"
            android:gravity="center"
            android:padding="5dp"
            android:button="@android:color/transparent"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/option_b"
            android:background="#FFF"
            android:textColor="#000"
            android:textSize="18dp"
            android:padding="5dp"
            android:gravity="center"
            android:button="@android:color/transparent"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/option_c"
            android:background="#FFF"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="18dp"
            android:button="@android:color/transparent"
            android:padding="5dp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/option_d"
            android:button="@android:color/transparent"
            android:background="#FFF"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="18dp"
            android:padding="5dp"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="#000"
        android:text="@string/next_btn"
        android:layout_gravity="center"
        android:background="@drawable/next_icon2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/option_list"
        android:layout_margin="25dp"
        android:id="@+id/next_btn"/>
    <com.google.android.gms.ads.AdView
        android:id="@+id/banner_ad3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

</RelativeLayout>
