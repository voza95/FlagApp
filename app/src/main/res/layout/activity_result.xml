<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.wondrousapps.flagquiz.activity.ResultActivity">
    <com.jackandphantom.circularprogressbar.CircleProgressbar
        android:id="@+id/circularProgressBar"
        android:layout_centerInParent="true"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:indeterminate="false"
        android:layout_centerHorizontal="true"
        app:cpb_backgroundProgressColor="#BA68C8"
        app:cpb_foregroundProgressColor="#4A148C"
        app:cpb_backgroundProgressWidth="15"
        app:cpb_foregroundProgressWidth="20"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:progressDrawable="@drawable/progressbar_states" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#4A148C"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/total_percent"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_below="@id/circularProgressBar">
    <TextView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textSize="25dp"
        android:elevation="2dp"
        android:background="@drawable/next_icon2"
        android:id="@+id/total_ask"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/result"
        android:layout_margin="5dp"
        android:background="@drawable/next_icon2"
        android:textSize="25dp"
        android:elevation="2dp"
        android:gravity="center"
        android:layout_below="@id/result"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/worng_ans"
        android:layout_margin="5dp"
        android:background="@drawable/next_icon2"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_below="@id/result"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/attempt_que"
        android:layout_margin="5dp"
        android:background="@drawable/next_icon2"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_below="@id/result"
        android:layout_centerHorizontal="true"/>
    <!--<TextView-->
